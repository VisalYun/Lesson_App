<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Second">

    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plus" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="84dp"
            android:layout_marginTop="236dp" android:onClick="cal"/>
    <TextView
            android:text="Value 1: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/v1" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp" android:textSize="24sp"
            android:layout_marginTop="96dp"/>
    <TextView
            android:text="Value 2: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/v2" android:textSize="24sp"
            android:layout_marginTop="164dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="160dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sub" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="248dp"
            android:layout_marginTop="236dp" android:onClick="cal"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mul" android:onClick="cal"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp" android:layout_marginTop="312dp"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/div" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="248dp"
            android:layout_marginTop="312dp" android:onClick="cal"/>
</androidx.constraintlayout.widget.ConstraintLayout>