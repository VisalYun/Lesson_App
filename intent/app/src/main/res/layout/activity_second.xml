<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".second">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/user"
              android:text="Name" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
              tools:layout_editor_absoluteX="0dp"
              android:textSize="45dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintVertical_bias="0.444"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/school"
              android:text="School" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="552dp"
              tools:layout_editor_absoluteX="-16dp"
              android:textSize="45dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintVertical_bias="1.0"/>


</androidx.constraintlayout.widget.ConstraintLayout>